{
  "name": "crypto-celt",
  "version": "0.0.1",
  "description": "CryptoCelt is just CeltNFT/GreenFalCoin Creat/Airdrop/Marketing Page",
  "main": "index.ts",
  "author": "Andrei K",
  "license": "MIT",
  "private": true,
  "workspaces":{
    "packages": [
      "packages/app",
      "packages/blockchain",
      "packages/nft-res-generator",
      "packages/server"
    ]
  },
  "packageManager": "yarn@3.1.0",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts":{
    "poetry" : "cd packages/nft-res-generator/generator && poetry install",
    "nft:convert-layers-csv":"cd packages/nft-res-generator/generator && deno run --import-map ./import_map.json -A Drakefile.ts convert-layers-csv layersCsvPath=input-rarity-table.csv outputJsonPath=assets/layers.json",
    "nft:generate-metadata" :"cd packages/nft-res-generator/generator && rm -rf build && deno run --import-map ./import_map.json -A Drakefile.ts generate-metadata",
    "nft:generate-car": "cd packages/nft-res-generator && yarn ipfs-car --pack ./generator/build/images --output ./generator/build/image.car && yarn ipfs-car --pack ./generator/build/metadata --output ./generator/build/metadata.car"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "crypto-js": "^4.1.1",
    "web3modal": "^1.9.5",
    "ethers-eip712":"^0.2.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.4.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.12",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.17.9",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^1.1.5",
    "ethers": "^5.6.0",
    "jest": "^27.0.4",
    "mocha": "^9.2.2",
    "openapi-examples-validator": "^4.6.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.4"
  }
}
